<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="shcomment" namespace="/comment" extends="json-default" >
		<action name="fetchComments" class="com.t.action.ModuleCommentAction" method="fetchComments">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="addComment" class="com.t.action.ModuleCommentAction" method="addComment">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="setGood" class="com.t.action.ModuleCommentAction" method="setGood">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
</struts>