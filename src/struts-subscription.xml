        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="subscription" namespace="/subscription" extends="json-default" >
		<action name="manageSubscription" class="com.t.action.SubscriptionAction" method="manageSubscription">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="manageBCSubscription" class="com.t.action.SubscriptionAction" method="manageBCSubscription">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="getFollowList" class="com.t.action.SubscriptionAction" method="getFollowList">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
	</package>
</struts>